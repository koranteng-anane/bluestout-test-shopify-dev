{{ 'section-team-members.css' | asset_url | stylesheet_tag }}

{% assign members = shop.metafields.custom.team_members.value %}

<div class="team-members-section">
  <div class="team-members__heading">
    <h2 class="team-members__heading-title">{{ section.settings.heading }}</h2>
    <p class="team-members__heading-subtitle">{{ section.settings.subheading }}</p>
  </div>

  <div class="team-members__content">
    {% if members != blank %}
      {% for member in members %}
        <div class="team-members__member">
          {% if member.image != blank %}
            <img
              src="{{ member.image | image_url: width: 200 }}"
              alt="{{ member.name | escape }}"
              width="100"
              height="100"
              loading="lazy"
            >
          {% endif %}

          <h3 class="team-members__member-name">{{ member.name }}</h3>
          <p class="team-members__member-job-title">{{ member.job_title }}</p>
        </div>
      {% endfor %}
    {% endif %}
  </div>

</div>

{% schema %}
{
  "name": "Team Members",
  "tag": "section",
  "class": "team-members",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub Heading"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color"
    }
  ],
  "max_blocks": 5,
  "blocks": [
    {
      "name": "Team Member",
      "type": "team_member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name"
        },
        {
          "type": "text",
          "id": "job_title",
          "label": "Job Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Team Members",
      "settings": {}
    }
  ],
  "enabled_on": {
    "templates": ["*"]
  }
}
{% endschema %}
